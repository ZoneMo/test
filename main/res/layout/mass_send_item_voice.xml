<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView android:id="@id/mass_send_itme_time_tv" style="@style/mass_send_time" />
    <LinearLayout android:id="@id/mass_send_item_contact_area" style="@style/mass_send_top_part_frame">
        <TextView android:id="@id/mass_send_item_contact_count" style="@style/mass_send_contact" />
        <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <TextView android:id="@id/mass_send_item_text_contact" android:layout_width="0.0dip" android:layout_weight="1.0" style="@style/mass_send_contact" />
            <ImageView android:id="@id/mass_send_item_sub_menu" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/mm_submenu" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout style="@style/mass_send_bottom_part_frame">
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <TextView android:id="@id/mass_send_item_length" style="@style/ChattingUIVoiceLength" />
            <FrameLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
                <TextView android:id="@id/mass_send_item_voice_content" android:background="@drawable/chatto_bg" android:layout_width="wrap_content" android:layout_height="wrap_content" android:minHeight="@dimen/ChattingContentMinHeight" android:drawableRight="@drawable/chatto_voice_playing" />
                <com.tencent.mm.ui.base.AnimImageView android:layout_gravity="right" android:id="@id/mass_send_item_voice_anim" android:paddingRight="17.0dip" android:visibility="gone" android:layout_width="fill_parent" android:layout_height="fill_parent" android:minHeight="@dimen/ChattingContentMinHeight" />
            </FrameLayout>
        </LinearLayout>
        <LinearLayout android:gravity="right|center" android:paddingTop="10.0dip" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <TextView android:id="@id/mass_send_item_compose" style="@style/mass_send_again_btn" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>