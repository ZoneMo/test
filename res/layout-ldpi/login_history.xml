                <LinearLayout android:orientation="vertical" android:paddingTop="@dimen/SmallIconSize" android:layout_width="fill_parent" android:layout_height="wrap_content">
                    <ImageView android:layout_gravity="center_horizontal" android:id="@id/last_avatar" android:layout_width="@dimen/LargerIconSize" android:layout_height="@dimen/LargerIconSize" android:src="@drawable/signup_change_avatar_bg" />
