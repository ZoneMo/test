<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:background="@color/navpage" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <ScrollView android:fadingEdge="none" style="@style/MMScroll">
        <com.tencent.mm.ui.account.ResizeLayout android:orientation="vertical" android:id="@id/resize_lv" android:layout_width="fill_parent" android:layout_height="wrap_content">
