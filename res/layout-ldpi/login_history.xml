                    </LinearLayout>
                </LinearLayout>
            </com.tencent.mm.ui.account.MMKeyboardUperView>
            <RelativeLayout android:layout_gravity="center" android:id="@id/fix_bottom_lv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/LargestPadding" android:layout_marginBottom="@dimen/LargestPadding">
                <Button android:id="@id/login_create_account_btn" android:layout_marginBottom="@dimen/LargestPadding" android:minWidth="@dimen/NormalButtonWidth" android:text="@string/intro_create_account_qq" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true" style="@style/MMSmallGreyButton" />
            </RelativeLayout>
        </com.tencent.mm.ui.account.ResizeLayout>
    </ScrollView>
</LinearLayout>