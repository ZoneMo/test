        <LinearLayout android:orientation="vertical" android:paddingLeft="@dimen/LargePadding" android:paddingTop="@dimen/LargePadding" android:paddingRight="@dimen/LargePadding" android:paddingBottom="@dimen/LargePadding" android:fadingEdge="none" android:layout_width="fill_parent" android:layout_height="wrap_content">
