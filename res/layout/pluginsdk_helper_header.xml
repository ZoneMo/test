<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:orientation="horizontal" android:paddingTop="@dimen/LargePadding" android:paddingBottom="@dimen/LargePadding" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <ImageView android:id="@id/avatar_iv" android:layout_width="@dimen/BigAvatarSize" android:layout_height="@dimen/BigAvatarSize" />
        <View android:layout_width="@dimen/LargePadding" style="@style/MMSplit" />
        <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1.0">
            <TextView android:id="@id/nickname_tv" android:text="{nick name}" style="@style/MMFontPreferenceProfile" />
            <View style="@style/MMSplit" />
            <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <TextView android:id="@id/status_tv" android:text="{installed|uninstalled|hide}" style="@style/MMFontPreferenceSmall" />
                <View android:layout_width="fill_parent" android:layout_weight="1.0" style="@style/MMSplit" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <TextView android:gravity="left|center" android:id="@id/hint_tv" android:background="@drawable/pluginsdk_header_hint_bg" android:padding="6.0dip" android:minHeight="@dimen/SmallListHeight" android:singleLine="false" style="@style/MMBriefText" />
</LinearLayout>